{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "isolatedModules": false, 
    "verbatimModuleSyntax": false
  }
}
